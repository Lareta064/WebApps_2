mixin header(arg, addCl)
	header.header
		.container
			.header__content
				a(href="index.html").logo
					img(src="./img/logo.webp", alt="logo")
				
				//========== NAVIGATION =====
				+header-menu(arg)
				
				//========== HEADER ICONS =====
				.header__buttons
					//======= notification icon =====
					if addCl
						a(href="settings.html").btn-settings.active
							svg.svg-settings
								use(href="./img/spriteSvg.svg#svg-settings")
					else
						a(href="settings.html").btn-settings
							svg.svg-settings
								use(href="./img/spriteSvg.svg#svg-settings")
					//======= mobile menu icon =====
					button.menu-toggle
						span