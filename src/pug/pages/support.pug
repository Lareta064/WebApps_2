extends ../layouts/layout.pug
mixin support-row(type, level)
	.support-table-row&attributes(attributes)
		if type == 'Ошибка'
			.cell-type.cell-type--wrong
				p #{type}
		else
			.cell-type
				p #{type}
		.cell-date
			p 20.05.23 в 23:20
		.cell-code
			p 0x400800001
		.cell-level
			p #{level}
		.cell-text
			p Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et.


block content
	+header([
		{name: 'Приборная панель', link: 'dashboard.html'},
		{name: 'Администраторы', link: 'admins.html'},
		{name: 'Заказы',link: 'orders.html'},
		{name: 'Аналитика',link: 'analytics.html'},
		{name: 'Связь', link: 'connection.html'},
		{name: 'Техподдержка', link:'support.html', active:'true'}
	])

	main.support
		.support-aside
			//======кнопка показать/скрыть сайдбар на моб версии ======
			.support-aside__btn
				.right-icon
				.cross-icon
			
			//========плашка с иконками ======
			.support-aside__controls
				button.reload-btn
					span.reload-icon
				button.setting-btn
					span.setting-icon
					
			//=======меню=======
			.vertmenu
				ul
					li
						a(href="#!") Журналы аудита
						input#1.subCat(type='checkbox' checked)
						label.chka(for='1')
						ul(style='display:none')
							li
								a(href="#!") Системные журналы
								input.subCat(type='checkbox'  id='1.1')
								label.chka(for='1.1')
								ul(style='display:none')
									li
										a(href="#!") Безопасность
									li
										a(href="#!") Мандатная подсистема
									li
										a(href="#!") Система
							li
								a(href="#!") Пункт меню 1.2
							li
								a(href="#!") Пункт меню 1.3
					li
						a(href="#!") Прикладные журналы
						
					li
						a(href="#!") Сохранённые журналы
						
		.support-content
			.support-wrapper
				.support-table.scroll-right
					.support-table-row.support-table__header
						.cell-type  Тип события
						.cell-date Дата и время
						.cell-code Код события
						.cell-level Уровень важности
						.cell-text Текст события

					+support-row('Ошибка', 'Нормальный')
					+support-row('Сведение', 'Нормальный')
					+support-row('Сведение', 'Нормальный')(class="active")
					+support-row('Ошибка', 'Высокий')
					+support-row('Ошибка', 'Высокий')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Низкий')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Высокий')
					+support-row('Ошибка', 'Высокий')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Ошибка', 'Высокий')
				
				.support-meta.border-shadow
					button.cross-icon
					
					.dotter-list.border-shadow
						+dotter-li('Код события:', '0x400800001')
						+dotter-li('Тип события:', 'Ошибка')
						+dotter-li('Субъект:','Lorem ipsum dolor.')
						+dotter-li('Дата и время:', '20.05.23 в 23:20')
						+dotter-li('Уровень важности:', 'Нормальный')
					.support-meta__text
						p SC: старт службы Lorem ipsum dolor sit провален.
			.support-info
				p В журнале Система на #[span 02.11.23 14:52:33]  #[span 57] событий, отображено #[span 57] из #[span 57]


block variables
	-var title = "Техподдержка";