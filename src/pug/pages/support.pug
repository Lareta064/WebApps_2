extends ../layouts/layout.pug
mixin support-row(type, level, text = 'Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et.')
	.audit-table-row.js-group-item(frame-btn="audit-report")&attributes(attributes)
		if type == 'Ошибка'
			.cell-type.cell-type--wrong
				p #{type}
		else
			.cell-type
				p #{type}
		.cell-date
			p 20.05.23 в 23:20
		.cell-code
			p 0x400800001
		.cell-level
			p #{level}
		.cell-text
			p #{text}

block content
	+header([
		{name: 'Приборная панель', link: 'dashboard.html'},
		{name: 'Администраторы', link: 'admins.html'},
		{name: 'Заказы',link: 'orders.html'},
		{name: 'Аналитика',link: 'analytics.html'},
		{name: 'Связь', link: 'connection.html'},
		{name: 'Техподдержка', link:'support.html', active:'true'}
	])

	main.support
		//======кнопка показать/скрыть сайдбар на моб версии ======
		button.open-aside(frame-btn="support-aside")  Показать журнал
		//========== сайдбар с меню ===========
		.support-aside(frame-modal="support-aside")
			//=========== кнопка для моб версии - скрывает меню =======
			button.hide-aside(frame-close)
				svg.svg-cross
					use(href="./img/spriteSvg.svg#svg-cross")
			
			//=========== audit-menu =======
			.audit-menu
				//========плашка с иконками ======
				.support-aside__controls
					button.reload-btn
						span.reload-icon
					button.setting-btn
						span.setting-icon
						
				//=======меню=======
				.level-menu
					ul
						li
							a(href="#!") Журналы аудита
							input#1.level-cat(type='checkbox' checked)
							label.level-label(for='1')
							ul(style='display:none')
								li
									a(href="#!") Системные журналы
									input.level-cat(type='checkbox'  id='1.1')
									label.level-label(for='1.1')
									ul(style='display:none')
										li
											a(href="#!") Безопасность
										li
											a(href="#!") Мандатная подсистема
										li
											a(href="#!") Система
								li
									a(href="#!") Пункт меню 1.2
								li
									a(href="#!") Пункт меню 1.3
						li
							a(href="#!") Прикладные журналы
							
						li
							a(href="#!") Сохранённые журналы
						
		.support-content
			.support-wrapper
				.audit-table.scroll-right.js-group
					.audit-table-row.audit-table__header
						.cell-type  Тип события
						.cell-date Дата и время
						.cell-code Код события
						.cell-level Уровень важности
						.cell-text Текст события

					+support-row('Ошибка', 'Нормальный', 'Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et. Lorem ipsum dolor ')
					+support-row('Сведение', 'Нормальный', 'Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et. Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et.')
					+support-row('Сведение', 'Нормальный')
					+support-row('Ошибка', 'Высокий')
					+support-row('Ошибка', 'Высокий')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Низкий')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Высокий')
					+support-row('Ошибка', 'Высокий')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Успех', 'Нормальный')
					+support-row('Ошибка', 'Высокий')
				
				.audit-report.border-shadow(frame-modal="audit-report")
					button.hide-report(frame-close)
						svg.svg-cross
							use(href="./img/spriteSvg.svg#svg-cross")
					
					.dotter-list.border-shadow
						+dotter-li('Код события:', '0x400800001')
						+dotter-li('Тип события:', 'Ошибка')
						+dotter-li('Субъект:','Lorem ipsum dolor.')
						+dotter-li('Дата и время:', '20.05.23 в 23:20')
						+dotter-li('Уровень важности:', 'Нормальный')
					.audit-report__text
						p SC: старт службы Lorem ipsum dolor sit провален.
					
			.audit-result
				p В журнале Система на #[span 02.11.23 14:52:33]  #[span 57] событий, отображено #[span 57] из #[span 57]


